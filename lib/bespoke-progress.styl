$progress-bar-color = darken($presentation-color, 35%)

@media screen
  .bespoke-progress-parent
    position absolute
    top 0
    left 0
    right 0
    height 3px
    z-index 2
    &::after
      content attr(slide-no)
      position absolute
      font-size 10px
      border-radius 5px
      width 2em
      height 2.5em
      left 1em
      top -1em
      padding 1em 0.5em 0
      box-sizing border-box
      background-color $progress-bar-color
      color white

  .bespoke-progress-bar
    position absolute
    height 100%
    transition width .3s ease
    &:before
      content " "
      position absolute
      display block
      width 100%
      height 100%
      background $progress-bar-color
    &::after
      content " "
      position absolute
      right -1em
      border-top 0 solid transparent
      border-bottom 3px solid transparent
      border-left 1em solid $progress-bar-color
