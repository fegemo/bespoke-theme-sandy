@media screen
  .bespoke-bullet
    opacity 1
    transform translate3d(0, 0, 0)
    transition all 0.4s ease

  .bespoke-bullet-inactive
    opacity: 0
    pointer-events: none
    transform translate3d(40px, 0, 0)
    transition all 0.2s ease

  .bespoke-bullet-off
    .bespoke-bullet-inactive
      display list-item
      opacity initial
      transform initial

  .bullet-old
    color gray
    strong
      color lighten($accent-color, 75%)

  .bullet-no-anim
    transition-property opacity
    &.bespoke-bullet-inactive
      transform none

  .bullet.bullet.bullet-no-anim.bespoke-bullet-inactive
    transform none
    transition none
