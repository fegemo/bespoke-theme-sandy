// slide transitions
//------------------
@media screen
  .transition-sliding
    overflow hidden
    .bespoke-slide
      transform translate3d(0, 0, 0)
      transition transform $transition-duration $transition-easing, opacity 0.4s $transition-easing
    .bespoke-before
      transform translate3d(-101%, 0, 0)
    .bespoke-after
      transform translate3d(101%, 0, 0)

  .transition-subtle,
  .transition-subtle-to-right
      overflow hidden
    .bespoke-slide
      transform translate3d(0, 0, 0)
      transition transform $transition-duration $transition-easing, opacity $transition-duration $transition-easing
    .bespoke-before
      transform translate3d(-10%, 0, 0)
    .bespoke-before-2,
    .bespoke-before-3,
    .bespoke-before-4
      transform translate3d(-100%, 0, 0)
    .bespoke-after
      transform translate3d(10%, 0, 0)
    .bespoke-after-2,
    .bespoke-after-3,
    .bespoke-after-4
      transform translate3d(100%, 0, 0)
  .transition-subtle-to-left
    overflow hidden
    .bespoke-slide
      transform translate3d(0, 0, 0)
    .bespoke-before
      transform translate3d(10%, 0, 0)
    .bespoke-before-2,
    .bespoke-before-3,
    .bespoke-before-4
      transform translate3d(100%, 0, 0)
    .bespoke-after
      transform translate3d(-10%, 0, 0)
    .bespoke-after-2,
    .bespoke-after-3,
    .bespoke-after-4
      transform translate3d(-100%, 0, 0)
  .transition-subtle-to-bottom
    overflow hidden
    .bespoke-slide
      transform translate3d(0, 0, 0)
    .bespoke-before
      transform translate3d(0, -10%, 0)
    .bespoke-before-2,
    .bespoke-before-3,
    .bespoke-before-4
      transform translate3d(0, -100%, 0)
    .bespoke-after
      transform translate3d(0, 10%, 0)
    .bespoke-after-2,
    .bespoke-after-3,
    .bespoke-after-4
      transform translate3d(0, 100%, 0)
  .transition-subtle-to-top
    overflow hidden
    .bespoke-slide
      transform translate3d(0, 0, 0)
    .bespoke-before
      transform translate3d(0, 10%, 0)
    .bespoke-before-2,
    .bespoke-before-3,
    .bespoke-before-4
      transform translate3d(0, 100%, 0)
    .bespoke-after
      transform translate3d(0, -10%, 0)
    .bespoke-after-2,
    .bespoke-after-3,
    .bespoke-after-4
      transform translate3d(0, -100%, 0)


  .transition-giant-wheel
    overflow hidden
    .bespoke-slide
      transform translate3d(0, 0, 0)
      transition transform $transition-duration $transition-easing
      transform-origin 50% -100%
    .bespoke-before
      transform rotateZ(15deg)
    .bespoke-after
      transform rotateZ(-15deg)
  .transition-book
    overflow hidden
    .bespoke-slide
      transform translate3d(0, 0, 0)
      transition transform $transition-duration $transition-easing
      transform-origin 0 0
    .bespoke-before
      transform rotateY(-10deg)
    .bespoke-after
      transform rotateY(10deg)

  .transition-zoom-in
    .bepoke-slide
      transform scale(1)
      transition-duration $transition-duration
      transition-easing $transition-easing
      transition-properties opacity, transform
    .bespoke-before
      opacity 0
      transform scale(1.4)
    .bespoke-after
      opacity 0
      transform scale(0.7)
